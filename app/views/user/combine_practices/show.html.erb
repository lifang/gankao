    <div class="tb_name">
      <span class="tb_n_task1">Task I</span>
      <span class="tb_n_task2">Task II</span>
      <span class="tb_n_task3">Task III</span>
      <span class="tb_n_task4 tb_n_taskColor">Task IV</span>
      <span class="tb_n_task5">Task V</span>
    </div>
  <% elsif @practice_type==6  %>
    <div class="tb_loading"><div class="tb_loading_t width_457"></div></div>
    <div class="tb_name">
      <span class="tb_n_task1">Task I</span>
      <span class="tb_n_task2">Task II</span>
      <span class="tb_n_task3">Task III</span>
      <span class="tb_n_task4">Task IV</span>
