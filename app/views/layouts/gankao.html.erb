<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>赶考</title>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <%= javascript_include_tag :defaults %>
    <%= use_validate_js_tooltip %>
    <script type="text/javascript" src="/javascripts/jquery.js"></script>
    <script type="text/javascript">
      jQuery.noConflict();
    </script>
    <!--[if IE 6]>
    <script src="/javascripts/DD_belatedPNG_0.0.8a-min.js"></script>
    <script>
      /* EXAMPLE */
      DD_belatedPNG.fix('*');
      /* string argument can be any CSS selector */
      /* .png_bg example is unnecessary */
      /* change it to what suits you! */
    </script>
    <![endif]-->
  </head>

  <body>
    <div class="wrap">
      <div class="head">
        <div class="head_top">
          <div class="top_myGankao">
            <% if cookies[:user_id] %>
              <div class="t_gk">
                <% if is_student? %>
                  <%= link_to "我的考试", "/user/examinations" %>
                <% end %>
                <% if is_vicegerent? %>
                  <%= link_to "代理充值","/payments/agency_recharge" %>
                <% end %>
                <% if is_paper_creater? %>
                  <%= link_to "代理权限","/users/roles_manage" %>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="top_loginArea">
            <div>
              <% if cookies[:user_id] %>
                你好,<a href="/users/<%= cookies[:user_id] %>">
                  <%= current_user.name if current_user %>
                </a>
                |<a href="/signout" class="signColor">退出</a>
              <% else %>
                你好,<a href="/sessions/new" class="signColor">登录</a>
                |<a href="/users/new" class="signColor">注册</a>
              <% end %>
            </div>
          </div>
        </div>
        <div class="logo"><a href="/"><img src="/images/paper/logo.png" /></a></div>
        <div class="nav">
          <div class="menu">
            <ul>
              <li><a href="/users/<%= cookies[:user_id] %>/first_page">首页</a></li>
              <li><img src="/images/paper/menu_li.png" /></li>
              <li><a href="/exam_lists/simulate_list">模拟考试</a></li>
              <li><img src="/images/paper/menu_li.png" /></li>
              <li><a href="/exam_lists/old_exam_list" class="hover">真题训练</a></li>
              <li><img src="/images/paper/menu_li.png" /></li>
              <li><a href="/combine_practices">综合训练</a></li>
              <li><img src="/images/paper/menu_li.png" /></li>
              <li><a href="/exam_lists/incorrect_list">错题库</a></li>
              <li><img src="/images/paper/menu_li.png" /></li>
              <li><a href="/user/notes">笔记</a></li>
            </ul>
          </div>
        </div>
        <div class="clear"></div>
      </div>
      <div class="main">
        <%=  render :partial => "/common/display_flash" %>
        <%= yield %>
      </div>
      <div class="clear"></div>
      <div class="foot">
        <%=  render :partial => "/common/footer" %>
      </div>
    </div>

  </body>
</html>
