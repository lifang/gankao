        </div>
        <a id="logo" href="/"><span>考试系统</span></a>
        <div class="clear"></div>
        <p class="title_link">
        </p>
        <%  if (cookies[:user_id]!=nil) %>
          <p class="back_welcome">
            <%= cookies[:user_name].force_encoding('UTF-8')+"欢迎您！" if current_user %>
            <% if is_student? %>
              <%= link_to "[考试列表]", "/user/examinations" %>
            <% end %>
            <% if is_vicegerent? %>
              <%= link_to "[代理充值]","/payments/agency_recharge" %>
            <% end %>
            <% if is_paper_creater? %>
              <%= link_to "[代理权限设置]","/users/roles_manage" %>
            <% end %>
            <a href="/users/<%= cookies[:user_id] %>/first_page">[首页]</a>
            <a href="/combine_practices">[综合训练]</a>
            <a href="/user/notes">[我的笔记]</a>
