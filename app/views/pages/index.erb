

<script type="text/javascript">
  function open_sina_login() {
    window.open('/sessions/sina_login', '_blank', 'height=500,width=600,left=300,top=100');
  }

  function refresh() {
    window.location.reload();
  }

</script>


<div class="login_show_img" id="login_back"></div>
<div class="login_box">
  <div id="div_tab1">
    <% if cookies[:user_id].nil? %>
    <div class="top1">
      <p style="margin-top: 15px;font-size:140%;color:forestgreen;font-weight:bold;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;用户登录</p><br/>
      <%= form_for(:session, :url => sessions_path ,:html => {:onsubmit => "return signin_page()", :class => "required-validate"} ) do |f| %>
        <table>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;邮箱：</td>
          <td><%= f.text_field :email, :class => "required input_style" %></td>
          <div id="email"></div>
          <tr>
            <td>&nbsp;&nbsp;&nbsp;&nbsp;密码：</td>
            <td><%= f.password_field :password, :class => "required input_style" %></td>
          <div id=""></div>
          </tr>
          <tr>
            <td>验证码：</td>
            <td><input class="required input_style check_w max-length-4 min-length-4" type="text" name="proof_code" id="proof_code" class="required min-length-4 max-length-4" />
              <span  class="check_num" id="proofcode" title="看不清楚？可以点击此处换一张" onclick="<%= remote_function :update => :proofcode, :method => :get, :url => "/users/get_proof_code"  %>">
                <%= session[:signin_code] %>
              </span>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <input type="submit" value="登&nbsp;&nbsp;&nbsp;&nbsp;录" class="login_btn1" />
              <a href="/sessions/get_code" ><font color="#00A8E6">忘记密码？</font></a></td>
          </tr>
          
          <tr>
            <td align="center" colspan="2">
              <div id="error_msg"<font color="red"><span><%=flash[:error]%></span>&nbsp; <font color="red"> <%= flash[:error2] %></font></div>
            </td>
          </tr>
        </table>
      <%end%>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp使用其他帐号登录&nbsp;&nbsp;
      <a href="javascript:void(0);" onclick ="javascript:window.open('/sessions/sina_login', '_blank', 'height=500,width=800,left=200,top=100');"><%= image_tag("/images/sina.bmp")%></a>
      &nbsp;<a href="javascript:void(0);" onclick ="javascript:window.open('/sessions/renren_login', '_blank', 'height=500,width=800,left=200,top=100');"><%= image_tag("/images/renren.bmp")%></a>
      &nbsp;<a href="#"><%= image_tag("/images/qq.bmp")%></a>

    </div>
    <div class="login1">
      <p style="margin-top:15px; margin-left: 30px;">还没有注册帐号?</p><br/>
      <input type="button" value="立即注册" class="test1" onclick="javascript:window.location.href='/users/new'"/>
    </div>
    <%else%>
    <div class ="infor">
    <p>您的基本信息：</p>
    <% user=User.find(cookies[:user_id].to_i) %>
     邮箱：<%= user.email %><br/>
     姓名：<%= user.name %><br/>
     工作单位：<%= user.address %>
     <a href="/users/<%= user.id %>/edit" style="float:right;color:#00A8E6;font-size:80%;">修改个人信息&nbsp;&nbsp;&nbsp;</a>
    </div>
      <%end%>
  </div>

</div>
<div class="clear"></div>
