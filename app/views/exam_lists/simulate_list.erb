<script type="text/javascript" src="/javascripts/plugin_assets/My97DatePicker/WdatePicker.js" ></script>
<div class="main_box_back">
  <div class="in">
    <table>
      <colgroup>
        <col width="160" />
        <col width="80" />
        <col width="130" />
        <col width="80" />
        <col width="80" />
        <col width="60" />
        <col width="70" />
        <col width="" />
      </colgroup>
      <% if @examination_lists.blank? %>
        <tbody>
          <tr>
            <td align="center" colspan="8">您目前没有参加任何考试</td>
          </tr>
        </tbody>
      <% else %>
        <thead align="center">
          <tr>
            <th>模拟考试名称</th>
            <th>题目总数</th>
            <th>本场考试开始时间</th>
            <th>考试状态</th>
            <th>参与考试时间</th>
            <th>成绩</th>
            <th></th>
          </tr>
        </thead>
        <% @examination_lists.each do |examination| %>
          <tbody>
            <tr>
              <td><%= examination.title %></td>
              <td><%= examination.papers[0].total_question_num.to_s+"题" %></td>
              <td><%= examination.start_at_time.nil? ? "任何时候" : examination.start_at_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= @hash["#{examination.id}"].nil? ? "未参加":"已参加" %></td>
              <td><%= examination.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <% unless @hash["#{examination.id}"].nil? %>
                <td><%= @hash["#{examination.id}"].total_score.nil? ? "批阅中":@hash["#{examination.id}"].total_score %></td>
              <% else %>
                <td><%= "-" %></td>
              <% end %>
              <td>
                <%if examination.is_paper_open== false &&!@hash["#{examination.id}"].nil? %>
                  <%= "考卷不公开" %>
                <% else %>
                  <% unless @hash["#{examination.id}"].nil?%>
                    <% if @hash["#{examination.id}"].total_score.nil? %>
                      <%= "批卷中"  %>
                    <% else %>
                      <% if @hash["#{examination.id}"].is_submited==0 %>
                        <% if examination.exam_password1.nil? %>
                          <a href="/user/examinations/<%= examination.id %>/do_exam" target="_blank">开始考试</a>
                        <% else %>
                          <a href="/user/examinations/<%= examination.id %>/enter_password" target="_blank">开始考试</a>
                        <% end %>
                      <% else %>
                        <%= link_to "查看", "/user/exam_users/#{examination.id}?user_id=#{cookies[:user_id]}" %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <% if examination.exam_password1.nil? %>
                      <a href="/user/examinations/<%= examination.id %>/do_exam" target="_blank">开始考试</a>
                    <% else %>
                      <a href="/user/examinations/<%= examination.id %>/enter_password" target="_blank">开始考试</a>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      <% end %>
    </table>
  </div>
</div>