<script type="text/javascript" src="/javascripts/plugin_assets/My97DatePicker/WdatePicker.js" ></script>
<div class="main">
  <div class="mokao_box">
    <div class="mokao_left">
      <% if @examination_lists.blank? %>
        <p> 您目前没有参加任何考试</p>
      <% else %>
        <% num=0 %>
        <% num=@examination_lists.size %>
        <%  num=3 if @examination_lists.size>3 %>
        <% (0..num-1).each do |i|  %>
          <% examination=@examination_lists[i]%>
          <%  if i==0 %>
            <div class="mokaoList mkl_h"><h3><%= examination.title %></h3><p>
                <%= examination.start_at_time.nil? ? "任何时候" : examination.start_at_time.strftime("%Y-%m-%d %H:%M:%S") %></p>
            </div>
          <% else %>
            <div class="mokaoList"><h3><%= examination.title %></h3><p>
                <%= examination.start_at_time.nil? ? "任何时候" : examination.start_at_time.strftime("%Y-%m-%d %H:%M:%S") %></p>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mokao_right">
        <div class="mk_r_tab" >
          <% num=0 %>
          <% num=@examination_lists.size %>
          <%  num=3 if @examination_lists.size>3 %>
          <% (0..num-1).each do |i|  %>
            <% examination=@examination_lists[i]%>
          <%= examination.id %>
          <%= @hash["#{examination.id}"].nil? %>
          <%#=  @hash["#{examination.id}"].is_submited !=1%>
            <% if @hash["#{examination.id}"].nil? || @hash["#{examination.id}"].is_submited!=1%>
              <div class="mk_b_zz" style="display:none">
                <div class="mk_b_yh">做为高级用户，在您考试完毕三个工作日内，将有老师批改你的答卷，你将得到完整的成绩报告。</div>
                <% if examination.exam_password1.nil? %>
                  <div class="per_btn"><a href="/user/examinations/<%= examination.id %>/do_exam" target="_blank">开始考试</a></div>
                <% else %>
                  <div class="per_btn"><a href="/user/examinations/<%= examination.id %>/enter_password" target="_blank">开始考试</a></div>
                <% end %>
              </div>
            <% else %>
              <div class="mk_r_div mkList_jt<%= i %>" >
                <div class="cet_title"></div>
                <p class="begin_time_p">考试时间：<span class="blue"><%= examination.updated_at %></span></p>
                <h2>总分：<span class="red"><%= examination.papers[0].total_score %></span></h2>
                <% if   @hash["#{examination.id}"].total_score.nil? %>
                  <div class="mk_table">
                    <table width="300" border="0" cellspacing="1" cellpadding="0">
                      <tr>
                        <td><strong>听力</strong>(20%)</td>
                        <td><strong>阅读</strong>(40%)</td>
                        <td><strong>综合</strong>(25%)</td>
                        <td><strong>作文</strong>(15%)</td>
                      </tr>
                      <tr>
                        <td>20</td>
                        <td>20</td>
                        <td>20</td>
                        <td>20</td>
                      </tr>
                    </table>
                  </div>
                <% else %>
                  <div class="mk_table">
                    <table width="300" border="0" cellspacing="1" cellpadding="0">
                      <tr>
                        <td><strong>听力</strong>(20%)</td>
                        <td><strong>阅读</strong>(40%)</td>
                        <td><strong>综合</strong>(25%)</td>
                        <td><strong>作文</strong>(15%)</td>
                      </tr>
                      <tr>
                        <td>20</td>
                        <td>20</td>
                        <td>20</td>
                        <td>20</td>
                      </tr>
                    </table>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>