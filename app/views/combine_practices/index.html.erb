            <td style="text-align:center"><input type="button" style="padding:4px;" value="开始训练" onclick="window.open('/combine_practices/3/start','_blank')" /></td>
          </tr>
          <tr>
            <td  style="text-align:center">综合训练3</td>
            <td style="text-align:center"><%= count3=Examination.find_by_sql("select count(ex.id) count from examinations ex where types=4")[0].count %></td>
            <td><span class="progressBar" id="spaceused3"><%= ((Examination.find_by_sql("select count(ex.id) count from examinations ex inner join exam_users eu on eu.examination_id=ex.id where ex.types=4 and eu.is_submited=1")[0].count*1.0/count3))*100 %> %</span></td>
            <td style="text-align:center"><input type="button" style="padding:4px;" value="开始训练" onclick="window.open('/combine_practices/4/start','_blank')" /></td>
          </tr>
          <tr>
            <td style="text-align:center">综合训练4</td>
            <td style="text-align:center"><%= count4=Examination.find_by_sql("select count(ex.id) count from examinations ex where types=5")[0].count %></td>
            <td><span class="progressBar" id="spaceused4"><%= ((Examination.find_by_sql("select count(ex.id) count from examinations ex inner join exam_users eu on eu.examination_id=ex.id where ex.types=5 and eu.is_submited=1")[0].count*1.0/count4))*100 %> %</span></td>
