<%= javascript_include_tag 'progressbar/jquery.js' %>
<%= javascript_include_tag 'progressbar/jquery.progressbar.min.js' %>
<%= javascript_include_tag 'progressbar/jquery.progressbar.js' %>

<script type="text/javascript">
  function loading(){
    $("#spaceused1").progressBar();
    $("#spaceused2").progressBar();
    $("#spaceused3").progressBar();
    $("#spaceused4").progressBar();
    $("#spaceused5").progressBar();
    jQuery.noConflict();
  };
 
</script>

<body onload="loading();">
  <div class="main_box_back">
    <h2><span>综合训练列表</span></h2>
    <div class="in">
      <table style="text-align:center">
        <thead>
          <tr>
            <th width="280" style="text-align:center">练习名称</th>
            <th width="210" style="text-align:center">练习总数</th>
            <th width="210" style="text-align:center">完成情况</th>
            <th width="80" style="text-align:center"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="text-align:center">综合训练1</td>
            <td style="text-align:center"><%= count1=Examination.find_by_sql("select count(ex.id) count from examinations ex where types=2")[0].count %></td>
            <td><span class="progressBar" id="spaceused1"><%= ((Examination.find_by_sql("select count(ex.id) count from examinations ex inner join exam_users eu on eu.examination_id=ex.id where ex.types=2 and eu.is_submited=1")[0].count*1.0/count1))*100 %> % </span></td>
            <td style="text-align:center"><input type="button" style="padding:4px;" value="开始训练" onclick="window.open('/combine_practices/2/start','_blank')" /></td>
          </tr>
          <tr>
            <td  style="text-align:center">综合训练2</td>
