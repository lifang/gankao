<script>
  //解析弹出层
  jQuery(function(){
    jQuery('.v_f_info a').click(function(e){
      var index = jQuery('.v_f_info a').index(this);

      jQuery('.fx_ex_content').css('display','block');
      jQuery('.fx_ex_content > div').eq(index).css('display','block');
      jQuery('.fx_ex_content > div').eq(index).css({
        'top':(e.pageY-600)+'px',
        'left':(e.pageX-80)+'px'
      }).siblings().hide();

    })
    jQuery('.fx_ex_t > a').click(function(){
      jQuery('.fx_ex_content').css('display','none')
      jQuery('.fx_ex_content > div').css('display','none');
    })

  })

  function validate_form_proof(){
    if(document.getElementById("form_textarea").value.replace(/ /g,"")!=""){
      return true;
    }
    return false;
  }
</script>