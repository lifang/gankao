<%= form_for @user, :html =>{:onsubmit => 'return check_password()', :class => "required-validate"} do |f| %>
  <div class="main_right">
    <div class="member_info_div">
      <label>旧密码：</label>
      <%= f.password_field :old_password, :id => "user_old_password", :class => "required input_style",:size => "30" %>
      <span class="expForEmail"></span>
    </div>
    <div class="member_info_div">
      <label>新密码：</label>
      <%= f.password_field :password, :id => "user_password",
        :class => "required input_style min-length-6 max-length-20",:size => "30" %>
      <span class="expForEmail">长度6-20位</span>
    </div>
    <div class="member_info_div">
      <label>确认密码：</label>
      <%= f.password_field :password_confirmation, :id => "user_password_confirmation",
        :class => "required input_style",:size => "30" %>
      <span class="expForEmail"><span id="confirmationErr"></span></span>
    </div>
    <div class="member_info_btn">
      <button type="submit"></button>
    </div>
  </div>
<% end  %>